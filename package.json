{
  "name": "ogma",
  "version": "0.0.0",
  "description": "A NestJS module for the Ogma logger",
  "author": {
    "name": "Jay McDoniel",
    "email": "jmcdo29@gmail.com"
  },
  "keywords": [
    "nestjs",
    "nest",
    "logger",
    "json",
    "json-logging",
    "request-logging",
    "nestjs-module",
    "module",
    "logging"
  ],
  "scripts": {
    "preversion": "npm run format && npm run lint && lerna run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "check": "npm-check -u",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:all": "npm run build && npm run build:test",
    "prebuild:test": "rimraf dist-test",
    "build:test": "tsc -p tsconfig.test.json",
    "start:test": "node dist-test/main.js",
    "start:test:ws": "node dist-test/main.js ws",
    "format": "prettier --write \"packages/**/*.ts\"",
    "lint": "eslint --ext .ts packages/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@golevelup/nestjs-testing": "^0.1.2",
    "@golevelup/ts-jest": "^0.2.1",
    "@nestjs/cli": "^7.0.2",
    "@nestjs/common": "^7.0.5",
    "@nestjs/core": "^7.0.5",
    "@nestjs/graphql": "^7.0.13",
    "@nestjs/microservices": "^7.0.5",
    "@nestjs/platform-express": "^7.0.5",
    "@nestjs/platform-fastify": "^7.0.5",
    "@nestjs/platform-socket.io": "^7.0.5",
    "@nestjs/platform-ws": "^7.0.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.5",
    "@nestjs/websockets": "^7.0.5",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/pino": "^5.15.1",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "apollo-server-express": "^2.11.0",
    "apollo-server-fastify": "^2.11.0",
    "bunyan": "^1.8.12",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "fastify": "^2.13.0",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "npm-check": "^5.9.2",
    "pino": "^5.15.0",
    "prettier": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "snyk": "^1.277.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "type-graphql": "^0.17.6",
    "typescript": "^3.8.3",
    "winston": "^3.2.1",
    "ws": "^7.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -p tsconfig.json"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@ogma/logger": "file:packages/logger",
    "@ogma/nestjs-module": "file:packages/nestjs-module"
  }
}
