{
  "name": "ogma",
  "version": "0.0.0",
  "private": true,
  "description": "The @ogma workspace containing the base logging package, the NestJS module, and all the fun parsers to add in.",
  "author": {
    "name": "Jay McDoniel",
    "email": "jmcdo29@gmail.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "nestjs",
    "nest",
    "logger",
    "json",
    "json-logging",
    "request-logging",
    "nestjs-module",
    "module",
    "logging"
  ],
  "scripts": {
    "preversion": "npm run format && npm run lint && lerna run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "bootstrap": "pwd && lerna bootstrap",
    "build": "lerna run build",
    "check": "npm-check -u",
    "commit": "git-cz",
    "docker": "docker build",
    "docker:express": "yarn docker -t ogma/express-test -f Docker/express.Dockerfile .",
    "docker:fastify": "yarn docker -t ogma/fastify-test -f Docker/fastify.Dockerfile .",
    "docker:socket": "yarn docker -t ogma/socket-test -f Docker/socket-io.Dockerfile .",
    "format": "prettier --write \"packages/**/*.ts\"",
    "lint": "eslint --ext .ts .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@golevelup/nestjs-testing": "^0.1.2",
    "@golevelup/ts-jest": "^0.2.1",
    "@nestjs/cli": "^7.0.2",
    "@nestjs/schematics": "^7.0.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "snyk": "^1.277.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
