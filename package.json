{
  "name": "ogma",
  "version": "0.0.0",
  "private": true,
  "description": "The @ogma workspace containing the base logging package, the NestJS module, and all the fun parsers to add in.",
  "author": "Jay McDoniel <me@jaymcdoniel.dev>",
  "contributors": [
    "Jeff Minsungkim",
    "John Biundo",
    "Ruslan Gonzalez"
  ],
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "nestjs",
    "nest",
    "logger",
    "json",
    "json-logging",
    "request-logging",
    "nestjs-module",
    "module",
    "logging",
    "microservice",
    "http",
    "gql",
    "graphql",
    "websocket",
    "ws"
  ],
  "scripts": {
    "preversion": "yarn run format && yarn run lint && lerna run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "check": "npm-check -u",
    "commit": "git-cz",
    "format": "prettier --write \"{packages,integration}/**/*.ts\"",
    "lint": "eslint --ext .ts .",
    "setup": "yarn && yarn build",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch",
    "test:cov": "lerna run test:cov",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:int": "jest --config jest-integration.config.js",
    "test:int:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand --config jest-integration.config.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@golevelup/ts-jest": "^0.2.1",
    "@nestjs/cli": "^7.0.2",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.0.0",
    "@nestjs/microservices": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-fastify": "^7.0.0",
    "@nestjs/platform-socket.io": "^7.0.0",
    "@nestjs/platform-ws": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/websockets": "^7.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/socket.io": "^1.4.33",
    "@types/socket.io-client": "^1.4.32",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "apollo-server-express": "^2.11.0",
    "apollo-server-fastify": "^2.11.0",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "express": "^4.17.0",
    "fastify": "^2.13.0",
    "graphql": "^14.0.0",
    "graphql-tools": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.0.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "ws": "^7.2.3"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
