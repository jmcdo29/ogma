{
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "all",
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 70,
        "useTabs": false,
        "trailingComma": "none",
        "proseWrap": "never"
      }
    },
    {
      "files": ".*rc",
      "options": {
        "parser": "json"
      }
    }
  ]
}
