{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./lib",
    "baseUrl": ".",
    "strict": false,
    "noUnusedLocals": false,
    "lib": ["ES7"],
    "esModuleInterop": true,
    "paths": {
      "@ogma/*": ["packages/*/lib/"],
      "@ogma/logger/*": ["packages/logger/lib/*"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
